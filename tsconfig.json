{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2021",
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "baseUrl": ".",
        "paths": {
            "helper/*": [
                "./types/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "old"
    ]
}
